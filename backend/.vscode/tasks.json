{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "NestJS: Build",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "build"],
      "group": "build",
      "problemMatcher": ["$tsc"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "NestJS: Start Dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "start:dev"],
      "group": "none",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation",
          "endsPattern": "Nest application successfully started"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "NestJS: Start Debug",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "start:debug"],
      "group": "none",
      "isBackground": true,
      "problemMatcher": {
        "pattern": {
          "regexp": "^(.*)$"
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "Starting compilation",
          "endsPattern": "Debugger listening"
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    },
    {
      "label": "NestJS: Lint",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "lint"],
      "group": "none",
      "problemMatcher": ["$eslint-stylish"],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "NestJS: Test",
      "type": "shell",
      "command": "pnpm",
      "args": ["run", "test"],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Prisma: Generate",
      "type": "shell",
      "command": "pnpm",
      "args": ["exec", "prisma", "generate"],
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    },
    {
      "label": "Prisma: Migrate Dev",
      "type": "shell",
      "command": "pnpm",
      "args": ["exec", "prisma", "migrate", "dev"],
      "group": "none",
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      }
    }
  ]
}
